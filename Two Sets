Problem Link :- https://cses.fi/problemset/task/1092/

#include<bits/stdc++.h> 
using namespace std ;

/*
    Intuition :- 1 theke je shokol number er summation even oi shokol
    number ke duita set e split kore dewa jabe . 

    Jemon sum of first N natural numbers are written below :

    1 3 6 10 15 21 28 36 45 55 66 78 

    Tarmane dekha jacche je n er value  3,4  7,8  11,12 ei rokom
    n % 4 == 0 ba n % 4 == 3 er jonne even ashtese . Tarmane eder
    jonne value split kore dewa jabe . Baki part ta just implementation.
*/

int main(){
    long long n ; cin >> n ; long long sum = n * (n + 1) / 2 ;
    if((sum&1)) cout << "NO" << '\n' ;
    else{
        cout << "YES" << '\n' ; 
        vector<bool> flag(n+3, true) ; vector<long long> vec1 , vec2 ; 
        long req = sum / 2 ; long long curSum = 0 ;
        for(long long i = n ; i > 0 ; i--){
            if(curSum==req) break ;
            if(curSum+i<=req){
                curSum += i ; flag[i] = false ; vec1.push_back(i) ;
            }else{
                continue ;
            }
        }
        for(long long i = 1 ; i <= n ; i++){
            if(flag[i]) vec2.push_back(i) ;
        }

        sort(vec1.begin(),vec1.end()) ;

        cout << vec1.size() << '\n' ;
        for(auto &val:vec1) cout << val << " " ;
        cout << '\n' ;

        cout << vec2.size() << '\n' ;
        for(auto &val:vec2) cout << val << " " ;
        cout << '\n' ;

    }
    
}

