#include<bits/stdc++.h> 
using namespace std ;

/*
    Intuition :- Ekhane bola ache je n size er koto gula unique
    bitstring possible . Bitstring er kuno ekta index er value
    hoy 0 ba 1 hote pare . Tahole n size er bitstring e n ta position
    thakte pare . Proti position er value hoy 0 ba 1 hote pare . 
    Tahole amra bolte pari je , total number of bitstring hobe 
    2 * 2 * 2 * 2......................upto n number of 2 
    = pow(2,len of bitstring) ;
*/

long long MOD = 1e9 + 7 ;

long long binaryExponentiation(long long a , long long b){
    long long result = 1LL ;
    while(b){
        if(b&1) result = ((result % MOD) * (a % MOD)) % MOD ;
        a *= a ; a %= MOD ;
        b >>= 1 ;
    }
    return result ;
}

int main(){
    long long n ; cin >> n ;
    cout << binaryExponentiation(2,n) << '\n' ;
}

Ei code ta loop chaliye o kora jeto , tokhon er complexity hoto O(n) . 
Ekhane jei code ta lekha hoise ekhane code er complexity holo O(log2(n)) . 
Arekta system e binary ba Modular Exponentiation kora jay . Ta holo recursive approach e.

long long power(long long a, long long b) {
    if (b == 0) return 1;              // base case
    if (b % 2 == 0) {
        long long half = power(a, b / 2);
        return half * half;            // return the squared result
    } else {
        return a * power(a, b - 1);    // return the recursive product
    }
}

